    <!-- Room ID display and Play button -->
    <div class="container">
      <div class="row table-row">
        <div class="col-sm-1 col-sm-offset-3">
          <h5>Room ID:</h5>
        </div>
        <div class="col-sm-4">
          <div class="well well-sm" id="roomID-header">N/A</div>
        </div>
        <div class="col-sm-1" id="play-cont">
          <button id="play" class="btn-success btn-md">Play</button>
        </div>
      </div>
    </div>



    <!-- search bar -->
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2"><!--width is set by this div -->

          <div class="input-group">

            <span class="input-group-addon"><i class="glyphicon glyphicon-music"></i></span>
            <input type="text" class="form-control" id="song__search-input" name="msg" placeholder="Search for a song...">

            <div class="input-group-btn">
              <button class="btn btn-default" id="song__search-button">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>

          </div>
          <ul id="song__mountpoint" class="list-group"></ul>

        </div>
      </div>
    </div>

    <!-- Create room button -->
    <div class="row">
      <div class="col-sm-2 col-sm-offset-5" align="center">
        <a href="/start" id="createRoom-button" class="btn btn-link">Create a room</a>
      </div>
    </div>


    <!-- Join room button -->
    <div class="row">
      <div class="col-sm-2 col-sm-offset-5" align="center">
        <button class="btn btn-link" data-toggle="modal" data-target="#joinModal">Join a room</button>
      </div>
    </div>


    <!-- Join room Modal -->
    <div id="joinModal" class="modal fade" role="dialog">
      <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" align="center">Join a room</h4>
          </div>
          <div class="modal-body">
            <div class="container room-input" id="room-input-container">

              <input type="text" class="form-control text-input" id="roomID-input" type="text" placeholder="Input Room ID....">
              <br>
              <!-- <p id="room-status"></p> -->
            </div>
          </div>
          <div class="modal-footer">
            <button id="roomID-button" type="button" class="btn btn-default" data-dismiss="modal">Enter Room ID</button>
          </div>
        </div>

      </div>
    </div>

